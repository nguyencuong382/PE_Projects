<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>Authorization</filter-name>
        <filter-class>filter.Authorization</filter-class>
    </filter>
    <filter>
        <filter-name>AllFilter</filter-name>
        <filter-class>filter.AllFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AllFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>Authorization</filter-name>
        <url-pattern>/edit/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>AuthenticationServlet</servlet-name>
        <servlet-class>controller.AuthenticationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListDummiesServlet</servlet-name>
        <servlet-class>controller.ListDummiesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditServlet</servlet-name>
        <servlet-class>controller.EditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthenticationServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListDummiesServlet</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditServlet</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
